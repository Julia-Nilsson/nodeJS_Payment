<% if(token) { %> <%- include("headermember.ejs") %> <% } 
 else { %> <%- include("header.ejs") %> <% } %>
  
    
  
<div class="container mypage">
  <div class="row justify-content-center py-2">
    <h3 class="shoppingcart-title">Din Varukorg</h3>
  </div>

  <% if(user.cart < 1){ %>
            <p>Din varukorg är tom</p>
  <% } %>

  <% user.cart.forEach( (candy)=> { %>
  <div class="row justify-content-center text-center border pt-3">
    <div class="col-3">
      <h5 class="product-title"><%= candy.candyId.name %></h5>
    </div>
    <div class="col-3">
      <p class="product-quantity"><%= user.cart.candyId.quantity%></p>
    </div>
    <div class="col-3">
      <p class="product-price"><%= candy.candyId.price %></p>
    </div>
    <div class="col-3">
      <a href="/removeFromCart/<%= candy.candyId._id%>"><button style="margin-top: 10px;" type="button"
          class="btn btn-outline-dark">Ta bort </button></a>
    </div>

  </div>
  <% } ) %>

  <div class="row justify-content-center pt-2">
    <h3 class="checkout-information-title">Din Information</h3>
  </div>
  <div class="row justify-content-center pt-2">
    <div class="col-sm-12 col-lg-6 text-center">
      <a href="/login"><button type="submit" class="btn btn-dark w-100">Logga in</button></a>
      <a href="/signup">Har du inget konto?</a>
    </div>
  </div>
  <div class="row justify-content-center pt-2">
    <div class="col-12  ">
      <form action="/userinfo" method="post">
        <div class="form-row">
          <div class="form-group col-md-4">
            <label for="inputEmail">Email</label>
            <input type="email" class="form-control" id="inputEmail">
          </div>
          <div class="form-group col-md-4">
            <label for="inputName1">Förnamn</label>
            <input type="email" class="form-control" id="inputName1">
          </div>
          <div class="form-group col-md-4">
            <label for="inputName2">Efternamn</label>
            <input type="email" class="form-control" id="inputName2">
          </div>
        </div>
        <div class="form-group">
          <label for="inputAddress">Adress</label>
          <input type="text" class="form-control" id="inputAddress" placeholder="">
        </div>
        <div class="form-row">
          <div class="form-group col-md-2">
            <label for="inputZip">Postnummer</label>
            <input type="text" class="form-control" id="inputZip">
          </div>
          <div class="form-group col-md-5">
            <label for="inputCity">Ort</label>
            <input type="text" class="form-control" id="inputCity">
          </div>
          <div class="form-group col-md-5">
            <label for="inputPhoneNumber">Telefonnummer</label>
            <input type="text" class="form-control" id="inputPhoneNumber">
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-sm-12 col-lg-6 text-center pb-2">
            <button type="submit" class="btn btn-dark w-100">Använd Dessa Uppgifter</button>
          </div>
        </div>
      </form>
      <div class="row justify-content-center">
        <div class="col-sm-12 col-lg-6 text-center pt-2">
          <button type="submit" class="btn btn-dark w-100">Lägg Beställning</button>
        </div>
      </div>
    </div>
  </div>
</div>


<%- include("footer.ejs") %>